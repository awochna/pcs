<% unless @characters %>
  <p class="text-center">You don't have any characters yet!</p>
<% else %>
  <ul>
    <% @characters.each do |character| %>
      <li><%= link_to character.name, character_path(character) %></li>
    <% end %>
  </ul>
<% end %>
<p class="text-center"><%= link_to "Make a new character", new_character_path %></p>
